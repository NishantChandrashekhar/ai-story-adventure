{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "lib": ["ES2021"],
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts"]
  }
  