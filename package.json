{
  "name": "ai-story-adventure",
  "version": "1.0.0",
  "description": "An interactive story adventure game powered by OpenAI's GPT API",
  "main": "app.ts",
  "scripts": {
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }; if (Test-Path 'public\\js') { Remove-Item -Recurse -Force 'public\\js' }\"",
    "watch": "tsc --watch",
    "build:client": "tsc -p tsconfig.client.json",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "dev": "tsx watch src/index.ts"
  },
  "keywords": [
    "typescript",
    "openai",
    "story",
    "adventure",
    "game",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/ai-story-adventure.git"
  },
  "homepage": "https://YOUR_USERNAME.github.io/ai-story-adventure",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/ai-story-adventure/issues"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "openai": "^5.16.0"
  }
}
